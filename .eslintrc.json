{
    "env": {
        "browser": true,
        "es6": true
    },
    "extends": [
        "plugin: react/recommended",
        "airbnb"
    ],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "plugins": [
        "react"
    ],
    "rules": {
        "global-require": 0,
        "import/no-dynamic-require": 0,
        "no-plusplus": 0
    }
}